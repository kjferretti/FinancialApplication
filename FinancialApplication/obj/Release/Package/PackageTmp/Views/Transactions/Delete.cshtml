@model FinancialApplication.Models.CodeFirst.Transaction

<!-- Page content-->
<div class="content-wrapper">
    <h3>
        Delete Transaction
    </h3>
    <div class="container-fluid">
        <!-- START row-->
        <div class="row">
            <div class="col-md-4">
                <!-- START panel-->
                <div class="panel panel-default no-header-danger">
                    <div class="panel-heading">Are you sure you want to delete this Transaction?</div>
                    <div class="panel-body">
                        <dl class="">

                            <dt>
                                Description
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Description)
                            </dd>

                            <dt>
                                Date
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Date)
                            </dd>

                            <dt>
                                Made By
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.MadeBy.FullName)
                            </dd>

                            <dt>
                                Amount
                            </dt>

                            <dd>
                                @if (Model.Expense && !Model.ForReconciled)
                                {
                                    <text>-</text>@Html.DisplayFor(model => model.Amount)
                                }
                                else if (!Model.ForReconciled)
                                {
                                    <text>+</text>@Html.DisplayFor(model => model.Amount)
                                }
                                else
                                {
                                    @Html.DisplayFor(model => model.Amount)
                                }
                            </dd>

                            <dt>
                                Account
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Account.Name)
                            </dd>

                            <dt>
                                Budget
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.BudgetCategory.Name)
                            </dd>

                        </dl>
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-sm btn-default">Delete Transaction</button>
                        }
                    </div>
                    <div class="panel-footer">
                        @Html.ActionLink("Back to Home", "Dashboard", "Home",null, new { @class = "btn btn-xs btn-success" })
                    </div>
                </div>
                <!-- END panel-->
            </div>
        </div>
    </div>
</div>