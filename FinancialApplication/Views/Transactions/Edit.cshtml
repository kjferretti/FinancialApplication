@model FinancialApplication.Models.TransactionEditViewModel


<!-- Page content-->
<div class="content-wrapper">
    <h3>
        Edit transaction from @ViewBag.AccountName
    </h3>
    <div class="container-fluid">
        <!-- START row-->
        <div class="row">
            <div class="col-md-4">
                <!-- START panel-->
                <div class="panel panel-default no-header-danger">
                    <div class="panel-heading">Enter transaction details</div>
                    <div class="panel-body">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            @Html.HiddenFor(model => model.Id)
                            @Html.HiddenFor(model => model.Amount)
                            @Html.HiddenFor(model => model.Expense)
                            @Html.HiddenFor(model => model.Date)
                            @Html.HiddenFor(model => model.AccountId)
                            @Html.HiddenFor(model => model.MadeById)
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                <label>Description</label>
                                @Html.TextBoxFor(model => model.Description, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                Budget Category
                                @Html.DropDownList("BudgetCategoryId", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.BudgetCategoryId, "", new { @class = "text-danger" })
                            </div>
                            <button type="submit" class="btn btn-sm btn-default">Add Transaction</button>
                        }
                    </div>
                    <div class="panel-footer">
                        @Html.ActionLink("Back to Home", "Index", "Accounts", null, new { @class = "btn btn-xs btn-success" })
                    </div>
                </div>
                <!-- END panel-->
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/Scripts/jquery.maskMoney.js"></script>
    <script>
        $(function() {
            $('#currency').maskMoney({thousands:""});
        })
    </script>
}