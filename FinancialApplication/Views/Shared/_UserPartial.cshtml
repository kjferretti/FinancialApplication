@model FinancialApplication.Models.ApplicationUser

<li class="has-user-block">
    <div id="user-block" class="collapse">
        <div class="item user-block">
            <!-- User picture-->
            <div class="user-block-picture">
                <div class="user-block-status">
                    <img src="~/backend-jquery/app/img/user/default-user.png" alt="Avatar" width="60" height="60" class="img-thumbnail img-circle">
                    <div class="circle circle-success circle-lg"></div>
                </div>
            </div>
            <!-- Name and Job-->
            <div class="user-block-info">
                <span class="user-block-name">Hello, @Model.FirstName</span>
            </div>
            <div class="btn-block text-center" style="margin-top:10px">
                <button style="margin-bottom:5px" class="btn btn-danger btn-xs" onclick="location.href='@Url.Action("Index", "Manage")';">Manage<span class="manage-button-responsive"> your account</span></button>
                <br />
                <a style="" class="btn btn-danger btn-xs" href="javascript:document.getElementById('logoutForm').submit()">Log Off</a>
            </div>
            @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right", @style = "display:inline" }))
            {
                @Html.AntiForgeryToken()
            }
        </div>
    </div>
</li>