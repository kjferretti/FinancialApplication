@model FinancialApplication.Models.BudgetCreateViewModel

<!-- Page content-->
<div class="content-wrapper">
    <h3>
        Create a new budget for your household
    </h3>
    <div class="container-fluid">
        <!-- START row-->
        <div class="row">
            <div class="col-md-4">
                <!-- START panel-->
                <div class="panel panel-default no-header-danger">
                    <div class="panel-heading">Enter Budget Information</div>
                    <div class="panel-body">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                <label>Budget Category</label>
                                @Html.EditorFor(model => model.Category, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Category, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label>Budget Amount</label>
                                <div class="input-group m-b">
                                    <span class="input-group-addon">$</span>
                                    @Html.EditorFor(model => model.InitialAmount, new { htmlAttributes = new { @class = "form-control", id = "currency" } })
                                    @Html.ValidationMessageFor(model => model.InitialAmount, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <button type="submit" class="btn btn-sm btn-default">Add Budget</button>
                        }
                    </div>
                    <div class="panel-footer">
                        @Html.ActionLink("Back to Budgets", "Index", null, new { @class = "btn btn-xs btn-success" })
                    </div>
                </div>
                <!-- END panel-->
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/Scripts/jquery.maskMoney.js"></script>
    <script>
        $(function() {
            $('#currency').maskMoney({thousands:""});
        })
    </script>
}