@model FinancialApplication.Models.CodeFirst.Budget

<!-- Page content-->
<div class="content-wrapper">
    <h3>
        Delete Budget
    </h3>
    <div class="container-fluid">
        <!-- START row-->
        <div class="row">
            <div class="col-md-4">
                <!-- START panel-->
                <div class="panel panel-default no-header-danger">
                    <div class="panel-heading">Are you sure you want to delete this Budget?</div>
                    <div class="panel-body">
                        <dl class="">

                            <dt>
                                Category
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.BudgetCategory.Name)
                            </dd>

                            <dt>
                                Starting Amount
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Amount)
                            </dd>

                            <dt>
                                Amount Remaining
                            </dt>

                            <dd>
                                @ViewBag.AmountRemaining
                            </dd>

                            <dt>
                                Number of Transactions
                            </dt>

                            <dd>
                                @ViewBag.TransactionsCount
                            </dd>

                        </dl>
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-sm btn-default">Delete Budget</button>
                        }
                    </div>
                    <div class="panel-footer">
                        @Html.ActionLink("Back to Budgets", "Index", null, new { @class = "btn btn-xs btn-success" })
                    </div>
                </div>
                <!-- END panel-->
            </div>
        </div>
    </div>
</div>