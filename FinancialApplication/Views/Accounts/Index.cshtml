@model IEnumerable<FinancialApplication.Models.CodeFirst.Account>

<!-- Page content-->
<div class="content-wrapper">
    <h3>
        Accounts for @ViewBag.HouseholdName
    </h3>
    <div class="row">
        <div class="col-lg-12">
            <div class="col-md-10">
                <!-- START panel-->
                <div id="panelDemo7" class="panel panel-default no-header-danger">
                    <div class="panel-heading"><a href="@Url.Action("Create")" class="btn btn-sm btn-default">Create New</a></div>
                    <div class="panel-body">
                        <!-- START table-responsive-->
                        <div class="table-responsive">
                            @if (Model.Any())
                            {
                            <table class="table table-striped table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th class="top-bordered">Account</th>
                                        <th class="top-bordered">Balance</th>
                                        <th class="top-bordered">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var account in Model)
                                    {
                                        <tr>
                                            <td>
                                                @account.Name
                                            </td>
                                            <td>
                                                @account.ReconciledBalance.ToString("C")
                                            </td>
                                            <td>
                                                <a class="btn btn-default btn-xs" style="width:120px" href="@Url.Action("Edit", new { id = account.Id })"><i class="fa fa-edit"></i>  Edit</a>
                                                <a class="btn btn-default btn-xs" style="width:120px" href="@Url.Action("Details", new { id = account.Id })"><i class="fa fa-search"></i>  Details</a>
                                                <a class="btn btn-default btn-xs" style="width:120px" href="@Url.Action("Create", "Transactions", new { id = account.Id })"><i class="fa fa-plus"></i>  New Transaction</a>
                                                <a class="btn btn-default btn-xs delete" data-confirm="Are you sure you want to delete this account?" style="width:120px" href="@Url.Action("Delete", new { id = account.Id })"><i class="fa fa-trash"></i>  Delete</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            }
                        </div>
                        <!-- END table-responsive-->
                    </div>
                </div>
                <!-- END panel-->
            </div>
        </div>
    </div>
</div>