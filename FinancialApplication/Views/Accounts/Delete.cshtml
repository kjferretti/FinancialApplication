@model FinancialApplication.Models.CodeFirst.Account

<!-- Page content-->
<div class="content-wrapper">
    <h3>
        Delete Account
    </h3>
    <div class="container-fluid">
        <!-- START row-->
        <div class="row">
            <div class="col-md-4">
                <!-- START panel-->
                <div class="panel panel-default no-header-danger">
                    <div class="panel-heading">Are you sure you want to delete this Account?</div>
                    <div class="panel-body">
                        <dl class="">

                            <dt>
                                @Html.DisplayNameFor(model => model.Name)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Name)
                            </dd>

                            <dt>
                                Current Balance
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.ReconciledBalance)
                            </dd>

                        </dl>
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-sm btn-default">Delete Account</button>
                        }
                    </div>
                    <div class="panel-footer">
                        @Html.ActionLink("Back to Accounts", "Index", null, new { @class = "btn btn-xs btn-success" })
                    </div>
                </div>
                <!-- END panel-->
            </div>
        </div>
    </div>
</div>