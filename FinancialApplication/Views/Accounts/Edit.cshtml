@model FinancialApplication.Models.CodeFirst.Account

<!-- Page content-->
<div class="content-wrapper">
    <h3>
        Edit Account Name
    </h3>
    <div class="container-fluid">
        <!-- START row-->
        <div class="row">
            <div class="col-md-4">
                <!-- START panel-->
                <div class="panel panel-default no-header-danger">
                    <div class="panel-heading">Enter a new Account name</div>
                    <div class="panel-body">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            @Html.Hidden("HouseholdId")
                            @Html.HiddenFor(model => model.Id)
                            @Html.HiddenFor(model => model.HouseholdId)
                            @Html.HiddenFor(model => model.CurrentBalance)
                            @Html.HiddenFor(model => model.ReconciledBalance)
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                <label>Account Name</label>
                                <input class="form-control" data-val="true" data-val-required="The Name field is required." id="Name" name="Name" type="text" value="@Model.Name">
                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                            </div>
                            <button type="submit" class="btn btn-sm btn-default">Change Name</button>
                        }
                    </div>
                    <div class="panel-footer">
                        @Html.ActionLink("Back to Accounts", "Index", null, new { @class = "btn btn-xs btn-success" })
                    </div>
                </div>
                <!-- END panel-->
            </div>
        </div>
    </div>
</div>